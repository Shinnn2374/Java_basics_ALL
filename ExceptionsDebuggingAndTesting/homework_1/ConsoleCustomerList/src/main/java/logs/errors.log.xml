<?xml version="1.0" encoding="UTF-8"?>
<configuration status="WARN">
    <appenders>
        <File name="errors" fileName="logs/errors.log">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} %msg%n"/>
        </File>
    </appenders>
    <loggers>
        <root level="info">
            <appender-ref ref="errors" level="error"/>
        </root>
    </loggers>
</configuration>